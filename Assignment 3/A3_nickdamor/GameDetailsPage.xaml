<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A3_nickdamor.GameDetailsPage"
             Title="Game Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Edit Game" FontSize="22" HorizontalOptions="Center" />

            <Label Text="Name" />
            <Entry x:Name="entryName" Placeholder="Game name" />

            <Label Text="Developer" />
            <Entry x:Name="entryDeveloper" Placeholder="Developer name" />

            <Label Text="Icon URL" />
            <Entry x:Name="entryIcon" Placeholder="http://..." />

            <Label Text="Blurb" />
            <Editor x:Name="entryBlurb" Placeholder="Game description" AutoSize="TextChanges" />

            <Button Text="Update" Clicked="OnUpdateClicked" BackgroundColor="Green" TextColor="White" />
            <Button Text="Delete" Clicked="OnDeleteClicked" BackgroundColor="DarkRed" TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
