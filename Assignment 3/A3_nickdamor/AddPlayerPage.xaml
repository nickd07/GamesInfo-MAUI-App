<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A3_nickdamor.AddPlayerPage"
             Title="Add Player">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="entryNickname" Placeholder="Nickname" />
        <Entry x:Name="entryName" Placeholder="Name" />
        <Entry x:Name="entrySurname" Placeholder="Surname" />


        <Button Text="Add Player" Clicked="OnAddPlayerClicked" />
    </VerticalStackLayout>
</ContentPage>
